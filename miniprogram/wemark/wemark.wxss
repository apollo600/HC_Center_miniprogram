@import "prism.wxss";

page {
	--font-sans-serif: 'Ubuntu', 'Source Sans Pro', sans-serif !important;
    --font-monospace: 'Fira Code', 'Roboto Mono', monospace !important;
}

.wemark_wrapper{
	margin:10px 0;
	font-size: 16px;
	color: #34495e;
	line-height: 1.6rem;
	font-family: 'Ubuntu', 'Source Sans Pro', sans-serif !important;
	-webkit-font-smoothing: antialiased;
	letter-spacing: 0;
	overflow-x: hidden;
}

.wemark_block_h1{
	padding-bottom: .2rem;
	font-size: 1.8rem;
	text-align: center;
    line-height: 1.3;
}

.wemark_block_h2{
	font-size: 1.35rem;
    line-height: 1.225;
    margin: 15px 0 15px;
    padding-bottom: 0.5em;
    border-bottom: 1px solid #ddd;
}

.wemark_block_h3{
	font-size: 1.25rem;
    line-height: 1.43;
    margin: 20px 0 7px;
}

.wemark_block_h4{
	font-size: 1.15rem;
}

.wemark_block_h5{
	font-size: 1rem;
}

.wemark_block_h6{
	font-size: 1rem;
    color: #777;
}

.wemark_block_h1,
.wemark_block_h2,
.wemark_block_h3,
.wemark_block_h4,
.wemark_block_h5,
.wemark_block_h6{
	position: relative;
    margin-top: 1rem;
    margin-bottom: 1rem;
    font-weight: bold;
    line-height: 1.4;
    cursor: text;
}

.wemark_block_p{
	margin: 0.8em 0;
}

.wemark_block_video{
	margin-top:1em;
	margin-bottom:1em;
	width:100%;
}
.wemark_block_blockquote_p{
	margin: 0.8em 0;
	padding: 10px 15px;
	font-size:28rpx;
	/* background:#f0f0f0; */
	color: #777;
	background-color: rgba(66, 185, 131, .1);
	/* border-left:5px solid #e0e0e0; */
	border-left: 4px solid #42b983;
}
.wemark_block_ul_li_p::before{
	content:'• ';
}
.wemark_block_ul_li_ul_li_p::before,
.wemark_block_ol_li_ul_li_p::before{
	content:'◦ ';
}
.wemark_block_ul_li_ul_li_p,
.wemark_block_ul_li_ol_li_p,
.wemark_block_ol_li_ul_li_p,
.wemark_block_ol_li_ol_li_p{
	padding-left: 1em;
}
.wemark_block_ul_li_p:last{
	margin-bottom:1em;
}
.wemark_block_code{
	display: block;
	padding:10px;
	font-size:28rpx;
	line-height: 1.5em;
	/* border:1px solid #f0f0f0; */
	background-color: #f8f8f8;
	color: #777;
	white-space: pre;
	overflow: auto;
}
.wemark_block_table{
	width: 100%;
	border-spacing: 0;
	border-collapse: collapse;
	/* border-left: 1px solid #e0e0e0; */
	/* border-top: 1px solid #e0e0e0; */
}
.wemark_block_table_tr{
	display: flex;
}
.wemark_wrapper_richtext .wemark_block_table_tr{
	display: table-row;
}
.wemark_inline_table_th,
.wemark_inline_table_td{
	flex:1;
	padding:5px;
	font-size:28rpx;
	word-break: break-all;
	border: 1px solid #e0e0e0;
}
.wemark_wrapper_richtext .wemark_inline_table_th,
.wemark_wrapper_richtext .wemark_inline_table_td{
	display: table-cell;
	/* background:red;
	border-right:1px solid #e0e0e0;
	border-bottom:1px solid #e0e0e0; */
}

.wemark_inline_table_td:last{
	/* border-top:1px solid #e0e0e0; */
}
.wemark_inline_table_th{
	background:#f0f0f0;
	/* border-top:1px solid #e0e0e0; */
}
.wemark_inline_strong{
	font-weight: bold;
	padding:0 5px;
	word-wrap:break-word;
}
.wemark_inline_em{
	font-style: italic;
	padding:0 5px;
	word-wrap:break-word;
}
.wemark_inline_strong_em{
	font-style: italic;
	font-weight: bold;
	padding:0 5px;
	word-wrap:break-word;
}
.wemark_inline_deleted{
	text-decoration: line-through;
	padding:0 5px;
	word-wrap:break-word;
}
.wemark_inline_image{
	width:100%;
	height:auto;
}
.wemark_inline_code{
	color: #e96900;
	background:#f8f8f8;
	margin: 0 auto;
	font-size: 0.82rem;
	padding: 4px 6px;
	word-wrap:break-word;
	border-radius: 2px;
}
.wemark_inline_text{
	word-wrap:break-word;
}
.wemark_inline_link{
	display: inline;
	color: blue;
	word-wrap:break-word;
}
